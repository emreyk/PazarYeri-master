
@{
    ViewData["Title"] = "Sil";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model SliderListeDTO
<div class="row" style="margin:auto; width:70%">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Bu veri kalıcı olarak silinicektir.Eminmisiniz?</h5>
                <form asp-action="Sil" method="post">
                    <img src="~/img/Slider/@Model.resim" class="img-fluid img-radius wid-120" alt="">
                    <div class="form-group">

                        <input type="text" asp-for="resim" hidden />
                        <div class="clearfix"></div>
                    </div>
                    <button type="submit" value="Sil" class="btn btn-primary">Sil</button>
                    <a asp-action="Index" class="btn btn-info btn">İptal</a>
                </form>

            </div>
        </div>
    </div>

</div>

