
@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



@model MarkaGenelDTO

<div class="layout-content">

    <div class="container-fluid flex-grow-1 container-p-y">

        <div class="card mb-4">
            <h6 class="card-header">Marka Ekle</h6>
            <div class="card-body">
                <form asp-action="Ekle" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="form-label">Marka Adı</label>
                        <span asp-validation-for="ad" class="text-danger"></span>
                        <input type="text" asp-for="ad" class="form-control" id="marka" />
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Seo Url</label>
                        <span asp-validation-for="seourl" class="text-danger"></span>
                        <input type="text" asp-for="seourl" class="form-control" id="seourl" />
                        <div class="clearfix"></div>
                    </div>

                    <div class="form-group">
                        <label class="form-label w-100">Resim</label>
                        <input type="file" name="resim">

                    </div>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a asp-action="Index" class="btn btn-info btn">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Js{


    <script src="~/assets/js/yardimci.js"></script>
   
}

<script>
    let baslik = document.querySelector("#marka");
    let seoBaslik = document.querySelector("#seourl");

    baslik.addEventListener("keyup", SeoUrlGetir)
    function SeoUrlGetir(e) {
        seoBaslik.value = ToSeoUrl(e.target.value);
    }
</script>

