
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(function () {
        $("#secenekListesi").dxDataGrid({
            dataSource: DevExpress.data.AspNet.createStore({
                key: "id",
                loadUrl: "/Admin/Secenek/SecenekListesiJson"
            }),



            paging: { pageSize: 10 },
            headerFilter: {
                visible: true
            },
            hoverStateEnabled: true,
            showColumnLines: true,
            showColumnLines: true,
            rowAlternationEnabled: true,
            searchPanel: {
                width: 350,
                visible: true
            },
            headerFilter: {
                visible: true
            },

            filterRow: {
                visible: true,
                applyFilter: "auto"
            },
            columns: [

                {
                    dataField: "id",
                    caption: "id",
                    visible: false,

                },
                {
                    dataField: "ad",
                    caption: "Seçenek Adı",
                },

                {
                    caption: "",
                    width: 100,

                    allowFiltering: false,
                    allowSorting: false,

                    cellTemplate: function (container, options) {
                        var id = options.data["id"];
                        $('<a href="/admin/secenek/duzenle/' + id + '"  class="btn btn-primary btn-sm">Düzenle </a>')

                            .appendTo(container);
                    }
                },

                {
                    caption: "",
                    width: 100,
                    cellTemplate: function (container, options) {
                        var id = options.data["id"];
                        $('<a href="/admin/secenek/sil/' + id + '"  class="btn btn-danger btn-sm">Sil </a>')

                            .appendTo(container);
                    }
                },
               

                {
                    caption: "",
                    width: 100,
                    cellTemplate: function (container, options) {
                        var id = options.data["id"];
                        $('<a href="/admin/secenek/madde/' + id + '"  class="btn btn-dark btn-sm">Maddeler </a>')

                            .appendTo(container);
                    }
                },

            ],
            onToolbarPreparing: function (e) {
                var toolbarItems = e.toolbarOptions.items;
                //var searchPanel = $.grep(toolbarItems, function (item) {
                //    return item.name === "searchPanel";
                //})[0];
                //searchPanel.location = "after";

                toolbarItems.push({
                    text: "Kategoriler",
                    location: "before"
                });

                toolbarItems.push({
                    widget: "dxButton",
                    options: {
                        icon: "plus",
                        onClick: function () {
                            window.location = "/admin/secenek/ekle ";
                        },
                        text: "Yeni",
                        height: 34,
                        width: 100,
                    },
                    location: "before"
                });
            },

        });


    });


</script>

<div class="layout-content">

    <div class="container-fluid flex-grow-1 container-p-y">
        <div class="demo-container">
            <div id="secenekListesi"></div>
        </div>
    </div>
</div>

