 <!-- Menu left-->

@using Pazaryeri.DataAccess.Concrete.EntityFrameworkCore.Context

<div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 col_vnxd  menu-left">
    <div class="row row_f8gy  ">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col_gafz col-style megamenu-style-dev megamenu-dev">
            <div class="responsive">
                <div class="so-vertical-menu no-gutter">
                    <nav class="navbar-default">
                        <div class=" container-megamenu  container   vertical  ">
                            <div id="menuHeading">
                                <div class="megamenuToogle-wrapper">
                                    <div class="megamenuToogle-pattern">
                                        <div class="container">
                                            <div><span></span><span></span><span></span></div>
                                            <span class="title-mega">
                                                All Categories
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="navbar-header">
                                <span class="title-navbar hidden-lg hidden-md">  Kategoriler  </span>
                                <button type="button" id="show-verticalmenu" data-toggle="collapse" class="navbar-toggle">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <div class="vertical-wrapper">
                                <span id="remove-verticalmenu" class="fa fa-times"></span>
                               
                                <div class="megamenu-pattern">
                                    <div class="container">
                                        <ul class="megamenu" data-transition="slide" data-animationtime="300">

                                            @{
                                                var pazarYeriContext = new PazayeriContext();
                                                var kategoriler = pazarYeriContext.Kategoriler.ToList().Where(x=>x.ust_kategori_id==0);
                                            }

                                            @foreach (var item in kategoriler)
                                            {
                                                <li class="item-vertical  css-menu with-sub-menu hover">
                                                    <p class="close-menu"></p>
                                                    <a href="#" class="clearfix">
                                                        <span>
                                                            <strong><img src="/Landing/image/catalog/demo/menu/icon/icon-8.png" alt="">@item.kategori_adi</strong>
                                                        </span>
                                                        <b class="fa fa-caret-right"></b>
                                                    </a>
                                                    <div class="sub-menu" style="width: 250px;">
                                                        <div class="content">
                                                            <div class="row">
                                                                <div class="col-sm-12">
                                                                    <div class="categories ">
                                                                        <div class="row">
                                                                            <div class="col-sm-12 hover-menu">
                                                                                <div class="menu">
                                                                                    <ul>

                                                                                        @{
                                                                                            var pazarYeriContext2 = new PazayeriContext();
                                                                                            var altKategoriler = pazarYeriContext.Kategoriler.ToList().Where(x => x.ust_kategori_id == item.id);
                                                                                        }
                                                                                        @foreach (var item2 in altKategoriler)
                                                                                        {
                                                                                            <li>
                                                                                                <a href="#" onclick="window.location = '#';" class="main-menu">@item2.kategori_adi<b class="fa fa-angle-right"></b></a>
                                                                                                <ul>
                                                                                                    @{
                                                                                                        var pazarYeriContext3 = new PazayeriContext();
                                                                                                        var altKategoriler2 = pazarYeriContext.Kategoriler.ToList().Where(x => x.ust_kategori_id == item2.id);
                                                                                                    }
                                                                                                    @foreach (var item3 in altKategoriler2)
                                                                                                    {
                                                                                                        <li><a href="#">@item3.kategori_adi</a></li>
                                                                                                    }

                                                                                                </ul>
                                                                                            </li>
                                                                                        }

                                                                                    </ul>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </li>
                                            }
                                            <li class="loadmore"><i class="fa fa-plus-square"></i><span class="more-view"> Tüm kategoriler</span></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!--- SLider right-->
